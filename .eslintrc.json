{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "semistandard",
    "standard",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:sonarjs/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": true
  },
  "plugins": [
    "@typescript-eslint",
    "sonarjs"
  ],
  "rules": {
    "semi": ["error", "always"],
    "no-mixed-spaces-and-tabs": "error",
    "no-var": "error",
    "indent": ["error", 4]
  }
}
